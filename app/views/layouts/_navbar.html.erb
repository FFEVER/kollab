<% if current_user %>
  <% user_path_props = user_path(current_user)%>
  <% user_projects_path_props = user_projects_path(current_user) %>
  <% user_full_name = current_user.full_name%>
<% else %>
  <% user_path_props = new_user_session_path%>
  <% user_projects_path_props = new_user_session_path %>
<% end %>

<% on_my_projects_page = false %>
<% if current_page?(user_projects_path(current_user)) %>
  <% on_my_projects_page = true %>
<% end %>

<% on_explore_page = false %>
<% if current_page?(projects_path) %>
  <% on_explore_page = true %>
<% end %>

<%= react_component "shared/layouts/Navbar",
  {
    userSignedIn: user_signed_in?,
    newUserRegistrationPath: new_user_registration_path,
    destroyUserSessionPath: destroy_user_session_path,
    newUserSessionPath: new_user_session_path,
    userPath: user_path_props,
    userProjectsPath: user_projects_path_props,
    projectsPath: projects_path,
    rootPath: root_path,
    userFullName: user_full_name,
    onMyProjectsPage: on_my_projects_page,
    onExplorePage: on_explore_page,
    authenticityToken: form_authenticity_token,
  } %>

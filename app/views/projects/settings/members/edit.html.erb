<div class="setting">
  <h2>Member Detail</h2>
  <div class="setting__member__section align-items-center">
    <% if @member.user.profile_image_url %>
      <%= image_tag @member.user.profile_image,
        class: 'image__profile image__profile--large image__profile--with-border' %>
    <% else %>
      <%= image_pack_tag 'portrait_placeholder.png',
        class: 'image__profile image__profile--large image__profile--with-border' %>
    <% end %>
  </div>
  <div class="setting__member__section align-items-center">
    <h3><%=  @member.user.full_name %></h3>
  </div>

  <%= react_component("members/EditMemberDetail",
    {
      authenticityToken: form_authenticity_token,
      submitPath: projects_settings_member_path,
      currentUser: current_user,
      memberRole: @serialized_member,
      member: @serialized_member,
      allRoles: @roles
    })
 %>

</div>

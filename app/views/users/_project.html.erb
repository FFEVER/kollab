<%= link_to project do %>
  <div class="list__item">
    <div class="list__item__col project__item--info">
      <h6 class="project__item__title">
        <%= project.title %>
      </h6>

      <p class="project__item__short-desc">
        <%= project.short_desc %>
      </p>

      <div class="project__item__tags">
        <% project.tag_list.each do |tag|%>
          <a href="#" class="tag"> <%= "##{tag}" %> </a>
        <% end %>
      </div>
    </div>

    <div class="list__item__col project__item--actions">
      <button class="button button--status button--very-small button--status--orange">
        In progress
      </button>
    </div>
  </div>
<% end %>

<div class="list__item profile__item">
  <div class="list__item__col profile__item__col--image">
    <%= link_to user do %>
      <%= image_pack_tag 'person.jpg',
            class: "image__profile image__profile--small" %>
    <% end %>
  </div>
  <%= link_to user do %>
    <div class="list__item__col profile__item__col--info">
      <h6>
        <%= user.full_name %>
      </h6>

      <p>
        <%= user.year_faculty %>
      </p>

    </div>

  <% end %>
  <div class="list__item__col profile__item__col--actions">
    <%# TODO: [Anyone] Add status%>
    <% if user != current_user %>
      <% if user.followed_by?(current_user) %>
        <%= button_to "Following", unfollow_user_path(user), method: :post,
            class: "button button--very-small button--outline-gray-light",
            remote: true %>
      <% else %>
        <%= button_to "Follow", follow_user_path(user), method: :post,
            class: "button button--very-small button--green",
            remote: true %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="profile">
  <div class="d-flex flex-row">
    <%= image_tag 'default/anya.jpg', style: 'height:100px;width:100;border-radius:50px;' %>
    <div class="d-flex flex-column justify-content-center mr-3 ml-3">
      <h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
      <p>4th year Software Engineering Stduent</p>
      <div class="d-flex flex-row align-items-center justify-content-between">
        <h3><%= @user.projects.count %></h3>
        <p class="mr-3 ml-3">Projects</p>
        <h3>5</h3>
        <p class="mr-3 ml-3">Folloings</p>
        <h3>3</h3>
        <p class="mr-3 ml-3">Followers</p>
      </div>
    </div>
  </div>
  <p class="mt-3 mb-3">I am 4th year student from King Mongkutâ€™s Institute of Technology Ladkrabang and currently studying in Software Engineering field. I am interested Web Development and Docker.</p>
  <%= button_to "Edit Profile", edit_user_registration_path, class: "button button--edit-profile", method: :get %>
  <div class="d-flex flex-row mt-3 justify-content-between">
    <h3>Skills</h3>
    <%=image_tag 'icon/more.png', style: 'height:20px;width:20px;'%>
  </div>
  <div class="d-flex flex-row mt-2">
    <button class="button--tags mt-2">React Native</button>
    <button class="button--tags mt-2">Docker</button>
    <button class="button--tags mt-2">JavaScript</button>
  </div>
  <div class="d-flex flex-row mt-3 justify-content-between">
    <h3>Contact</h3>
    <%=image_tag 'icon/more.png', style: 'height:20px;width:20px;'%>
  </div>

  <div class="d-flex flex-row mt-3">
    <%=image_tag 'icon/phone-call.png', style: 'height:20px;width:20px;margin-right:10px;'%>
    <p>+66 89 777 6666</p>
  </div>
  <div class="d-flex flex-row mt-2">
    <%=image_tag 'icon/mail.png', style: 'height:20px;width:20px;margin-right:10px;'%>
    <p><%= "#{@user.email}" %></p>
  </div>
  <div class="d-flex flex-row mt-2">
    <%=image_tag 'icon/instagram.png', style: 'height:20px;width:20px;margin-right:10px;'%>
    <p>anya.ks</p>
  </div>
  <div class="d-flex flex-row justify-content-between mt-3 mb-3">
    <h3>Projects</h3>
    <%= link_to image_tag('icon/add.png', style: 'height:20px;width:20px;'), new_project_path%>
  </div>
  <% @projects.each do |project| %>
    <%= render partial: "project", locals: {project: project}  %>
  <% end%>
  <div class="mt-3 mb-3">
    <h3>Interests</h3>
  </div>
  <div class="scrollmenu">
    <% 10.times do %>
      <%= link_to image_tag('icon/rectangle.png', style: 'height:100px;width:100px;margin-right:10px;'), new_project_path %>
    <% end %>
  </div>
  <div class="mt-3 mb-3">
    <h3>Photos</h3>
  </div>
  <div class="scrollmenu">
    <% 10.times do %>
      <%= link_to image_tag('icon/rectangle.png', style: 'height:100px;width:100px;margin-right:10px;'), new_project_path %>
    <% end %>
  </div>

  <%= react_component("profile/UserProfile",
    {
      authenticityToken: form_authenticity_token,
      submitPath: user_path,
      editPath: edit_user_registration_path
    })
%>
</div>
